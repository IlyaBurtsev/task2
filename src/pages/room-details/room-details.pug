include ../../ui-kit/header/header.pug
include ../../ui-kit/footer/footer.pug
include ../../ui-kit/room-info/room-info.pug
include ../../ui-kit/room-card/room-card.pug
include ../../ui-kit/review/review.pug

html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Room details
	body 
		+header()
		main.room-details__main 
			.room-details__picture-container
				img.room-details__main-picture
				.room-details__other-picture-container
			section.room-details__section 
				.room-details__column1
					.room-details__row1
						+room-info()
						.room-details__chart-container 
							canvas.room-details__chart
							.room-details__legend 
								+list({type: LIST_TYPE.BULLET, items:['Великолепно', 'Хорошо', 'Удовлетворительно', 'Разочарован']})
					+review()
					+list({type: LIST_TYPE.BULLET, items:['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})
				+room-card()
					

