				+button({type: BUTTON.WHITE_TEXT, label: 'khbkhlj', commonModificators: [MODIFICATOR.SELECTED]})
				+button({type: BUTTON.PURPLE_TEXT, label : 'jkhjgglflfk' , disabled: true})
