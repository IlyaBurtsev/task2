include ../../components/dropdown/dropdown.pug
include ../../components/title/title.pug
include ../../components/button/button.pug

mixin room-card()
	.room-card__container
		.room-card__title-container
			H1.room-card__room-number
			.room-card__price
		.room-card__date-dropdown
			+dropdown({
				type: DROPDOWN.DATE_PICKER,
				doubleInput: true,
				firstTitle: 'прибытие',
				secondTitle: 'выезд',
				selectedDates: '2019-08-19 2019-08-23',
			})
		.room-card__items-dropdown
				+title({title: 'Гости'})
					+dropdown({
						type: DROPDOWN.ITEM_QUANTITY, 
						footerButtonActive: true, 
						placeholder: 'Сколько гостей',
						})
		.room-card__info-container 
			.room-card__info 
				.room-card__room-info 
				.room-card__service-info='Сбор за услуги: ' 
				.room-card__service-info='Сбор за дополнительные услуги'
				.room-card__total 
					H2.room-card__total-info='Итого'
					.room-card__separator
			.room-card__price-info
				.room-card__room-price 
				.room-card__room-price 
				.room-card__room-price
				H2.room-card__total-price
		+button({type: BUTTON.PAY, label: 'забронировать'})
