include ../rating/rating.pug
mixin room-preview(options)
	-
		const {hoverDemo=false} = options 
		let sliderClassName = 'room-preview__slider js-room-preview__slider'
		hoverDemo ? sliderClassName+=' room-preview__slider_hover_demo' :''
	.room-preview__container.room-preview__container_empty.js-room-preview__container
		div(class=sliderClassName) 
			.room-preview__view-port 
				.room-preview__img-container.js-room-preview__img-container
				.room-preview__prev-button="expand_more"
				.room-preview__next-button="expand_more"
				.room-preview__button-container.js-room-preview__button-container
		.room-preview__title-container
			H2.room-preview__room-number.js-room-preview__room-number
			.room-preview__price
		.room-preview__separator
		.room-preview__rate-container 
			+rating({disabled: true})
			.room-preview__rating-counter.js-room-preview__rating-counter
		

